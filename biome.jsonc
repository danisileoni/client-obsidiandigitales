{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": false,
  },
  "files": {
    "ignore": ["dist/", "build/", "node_modules"],
  },
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": {
        "noStaticOnlyClass": "off",
      },
      "recommended": true,
      "style": {
        "useImportType": "off",
      },
    },
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true,
    },
  },
}
